                    FontWeight="Bold">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <Grid>
                            <Rectangle Width="5"
                                       Height="20"
                                       Fill="White" />
                            <Rectangle Width="20"
                                       Height="5"
                                       Fill="White" />
                        </Grid>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
            <Button Command="{Binding DeleteCommand, ElementName=Control}"
                    IsEnabled="{Binding IsCanDelete,ElementName=Control}"
                    FontWeight="Bold">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <Grid RenderTransformOrigin=".5,.5">
                            <Grid.RenderTransform>
                                <RotateTransform Angle="45" />
                            </Grid.RenderTransform>
                            <Rectangle Width="5"
                                       Height="20"
                                       Fill="White" />
                            <Rectangle Width="20"
                                       Height="5"
                                       Fill="White" />
                        </Grid>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
